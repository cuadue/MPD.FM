{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "module": "ES2022",
      "target": "ES5",
      "moduleResolution": "Bundler",
      "jsx": "react",
      "strict": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "lib": ["DOM"],
      "types": ["vite/client"]
    },
    "ts-node": {
      "esm": true,
    },
    "paths": {
      "@/*": ["./*"]
    }
  }
  